# Production Caddyfile for DeadDrop
# Provides automatic HTTPS, rate limiting, and security headers

deaddrop.yourdomain.com {
    # Automatic HTTPS via Let's Encrypt
    
    # Rate limiting (prevents abuse)
    rate_limit {
        zone upload {
            key {remote_host}
            events 10
            window 1h
        }
        zone download {
            key {remote_host}
            events 100
            window 1h
        }
    }
    
    # Security headers
    header {
        # HSTS (force HTTPS for 1 year)
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        
        # Clickjacking protection
        X-Frame-Options "DENY"
        
        # XSS protection (legacy browsers)
        X-XSS-Protection "1; mode=block"
        
        # Don't send referrer to external sites
        Referrer-Policy "no-referrer"
        
        # Disable browser features (privacy)
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
    }
    
    # Backend API reverse proxy
    handle /api/* {
        reverse_proxy backend:8000 {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # Frontend SPA (React)
    root * /var/www/deaddrop
    try_files {path} /index.html
    file_server
    
    # Compression
    encode gzip zstd
    
    # Logging (JSON format for analysis)
    log {
        output file /var/log/caddy/access.log {
            roll_size 100mb
            roll_keep 5
        }
        format json
    }
}

# Local development (HTTP only)
:3000 {
    handle /api/* {
        reverse_proxy localhost:8000
    }
    
    root * ./src/web/dist
    try_files {path} /index.html
    file_server
}
